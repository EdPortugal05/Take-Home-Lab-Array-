using System;
using System.Linq;
using System.Collections.Generic;

namespace HelloWold;

public static class Program
{
    public static void Main()
    {
        int[] ages = new int[5];
        int teenCount = 0;

        for (int i = 0; i < 5; i++)
        {
            Console.Write($"Enter age for customer number {i + 1}: ");
            while (!int.TryParse(Console.ReadLine(), out ages[i]) || ages[i] < 10 || ages[i] > 99)
            {
                Console.Write("Invalid age. Please enter age between 10-99: ");
            }

            if (ages[i] >= 13 && ages[i] <= 19) teenCount++;
        }

        Console.WriteLine("\nValid ages entered:");
        foreach (int age in ages)
        {
            Console.WriteLine(age);
        }
        Console.WriteLine($"Number of teenagers: {teenCount}");
        Console.ReadKey();
        
    }
}
