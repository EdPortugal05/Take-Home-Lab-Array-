using System;

using System.Linq;

using System.Collections.Generic;



namespace HelloWold;



public static class Program
{
    public static void Main()

    {
        
        string[] categories = { "Food", "Rent", "Utilities", "Transport", "Others" };
        float[] budgets = new float[5];
        float totalIncome = 25000;
        float totalBudget = 0;

        for (int i = 0; i < 5; i++)
        {
            Console.Write($"Enter budget for {categories[i]}: ");
            while (!float.TryParse(Console.ReadLine(), out budgets[i]))
            {
                Console.Write("Invalid input! Please enter a number: ");
            }
            totalBudget += budgets[i];
        }

        Console.WriteLine($"\nTotal budget: {totalBudget}");

        if (totalBudget > totalIncome)
        {
            Console.WriteLine("Warning: Budget exceeds income!");
            
            int maxIndex = 0;
            for (int i = 1; i < 5; i++)
            {
                if (budgets[i] > budgets[maxIndex]) maxIndex = i;
            }
            
            Console.WriteLine($"Consider reducing your {categories[maxIndex]} budget (current: {budgets[maxIndex]})");
        }
        else
        {
            Console.WriteLine("Budget is within income limits.");
        }
    }
}
